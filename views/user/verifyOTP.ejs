<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP - Furni</title>
    <style>
        :root {
            --primary-color: #3b5d50;
            --secondary-color: #f9bf29;
            --text-color: #ffffff;
            --background-color: #f8f9fa;
            --error-color: #dc3545;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: var(--background-color);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        
        .container {
            width: 100%;
            max-width: 450px;
            padding: 20px;
        }
        
        .logo {
            font-size: 2rem;
            font-weight: bold;
            color: var(--primary-color);
            margin-bottom: 10px;
        }
        
        .card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
        }
        
        h1 {
            color: var(--primary-color);
            font-size: 1.5rem;
            margin-bottom: 15px;
        }
        
        p {
            color: #6c757d;
            margin-bottom: 25px;
            font-size: 0.95rem;
            line-height: 1.5;
        }
        
        .otp-container {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 25px;
        }
        
        .otp-input {
            width: 60px;
            height: 60px;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            border: 2px solid #ced4da;
            border-radius: 8px;
            background: transparent;
        }
        
        .otp-input:focus {
            border-color: var(--primary-color);
            outline: none;
        }

        .hidden-input {
            display: none;
        }
        
        .timer {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 25px;
        }
        
        .timer span {
            font-weight: bold;
            color: var(--primary-color);
        }
        
        .btn {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            font-weight: 500;
        }
        
        .btn:hover {
            background-color: #2d4a3e;
        }
        
        .resend {
            margin-top: 20px;
            font-size: 0.9rem;
            color: #6c757d;
        }
        
        .resend a {
            color: var(--secondary-color);
            text-decoration: none;
            font-weight: 500;
        }
        
        .resend a:hover {
            text-decoration: underline;
        }
        
        .resend a.disabled {
            color: #adb5bd;
            cursor: not-allowed;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">Furni.</div>
        <div class="card">
            <h1>Verification Code</h1>
            <p>Please enter the 4-digit verification code sent to your email address or phone number</p>
            
            <form id="otpForm" action="/verify-otp" method="POST" onsubmit="return validateOTPform()">
                <div class="otp-container" id="otp">
                    <input type="text" maxlength="1" class="otp-input" autofocus data-index="0">
                    <input type="text" maxlength="1" class="otp-input" data-index="1">
                    <input type="text" maxlength="1" class="otp-input" data-index="2">
                    <input type="text" maxlength="1" class="otp-input" data-index="3">
                </div>
                
                <!-- Hidden input to store the complete OTP value -->
                <input type="hidden" name="otp" id="otpValue" class="hidden-input">
                
                <div class="timer">
                    Time remaining: <span id="countdown">01:00</span>
                </div>
                
                <button type="submit" class="btn">Verify</button>
            </form>
            
            <div class="resend">
                Didn't receive a code? <a href="#" id="resendLink" class="disabled">Resend code</a>
            </div>
        </div>
    </div>

    <script>
        // OTP input handling
        const form = document.getElementById('otpForm');
        const inputs = document.querySelectorAll('.otp-input');
        const otpValueInput = document.getElementById('otpValue');
        
        // Update the hidden input with all OTP digits
        function updateOtpValue() {
            let otpValue = '';
            inputs.forEach(input => {
                otpValue += input.value;
            });
            otpValueInput.value = otpValue;
        }
        
        inputs.forEach((input, index) => {
            input.addEventListener('keyup', function(e) {
                // Update the hidden input
                updateOtpValue();
                
                // Move to next input if current is filled
                if (this.value && index < inputs.length - 1) {
                    inputs[index + 1].focus();
                }
                
                // Handle backspace
                if (e.key === 'Backspace' && index > 0 && !this.value) {
                    inputs[index - 1].focus();
                }
            });
            
            input.addEventListener('keypress', function(e) {
                // Only allow numbers
                if (!/[0-9]/.test(e.key)) {
                    e.preventDefault();
                }
            });
            
            input.addEventListener('input', function() {
                updateOtpValue();
            });
        });
        
        // Handle paste event for OTP
        inputs[0].addEventListener('paste', function(e) {
            e.preventDefault();
            
            // Get pasted data
            const pastedData = (e.clipboardData || window.clipboardData).getData('text');
            
            if (/^\d+$/.test(pastedData)) {
                // Fill inputs with pasted digits
                for (let i = 0; i < Math.min(pastedData.length, inputs.length); i++) {
                    inputs[i].value = pastedData[i];
                    if (i < inputs.length - 1) {
                        inputs[i + 1].focus();
                    } else {
                        inputs[i].focus();
                    }
                }
                updateOtpValue();
            }
        });
        
        // Form submission
        form.addEventListener('submit', function(e) {
            const otpValue = otpValueInput.value;
            
            // Check if all digits have been entered
            if (otpValue.length !== 4) {
                e.preventDefault();
                alert('Please enter all 4 digits of the verification code');
            }
        });
        
        // Timer functionality
        let timeLeft = 60;
        const countdownEl = document.getElementById('countdown');
        const resendLink = document.getElementById('resendLink');
        
        let timer = setInterval(function() {
            timeLeft--;
            
            // Format time
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            countdownEl.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft <= 0) {
                clearInterval(timer);
                countdownEl.textContent = "00:00";
                resendLink.classList.remove('disabled');
            }
        }, 1000);
        
        // Resend functionality
        resendLink.addEventListener('click', function(e) {
            if (!this.classList.contains('disabled')) {
                e.preventDefault();
                
                // Reset timer
                timeLeft = 60;
                countdownEl.textContent = "01:00";
                
                // Disable resend link
                this.classList.add('disabled');
                
                // Clear inputs
                inputs.forEach(input => {
                    input.value = '';
                });
                otpValueInput.value = '';
                inputs[0].focus();
                
                // Restart timer
                clearInterval(timer);
                timer = setInterval(function() {
                    timeLeft--;
                    
                    // Format time
                    const minutes = Math.floor(timeLeft / 60);
                    const seconds = timeLeft % 60;
                    countdownEl.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                    
                    if (timeLeft <= 0) {
                        clearInterval(timer);
                        countdownEl.textContent = "00:00";
                        resendLink.classList.remove('disabled');
                    }
                }, 1000);
                
                // Make an AJAX request to resend OTP (simulated here)
                setTimeout(() => {
                    alert('A new verification code has been sent!');
                }, 500);
            }
        });

        function validateOTPform(){
            const otpInput=document.getElementById('otpValue').value;

            $.ajax({
                type:'POST',
                url:"verify-otp",
                data:{otp:otpInput},
                success:function(response){
                    if(response.success){
                        swal.fire({
                            icon:'success',
                            tittle:"OTP Verified Successsfully",
                            showconfirmButton:false,
                            timer:1500,
                        }).then(()=>{
                            window.location.href=response.redirectUrl;
                        })
                    }else{
                        swal.fire({
                            icon:'error',
                            tittle:Error,
                            text:response.message,
                            
                        })
                    }
                },
                error:function(){
                    swal.fire({
                        icon:'error',
                        tittle:'Invalid OTP',
                        text:'Please Try Again'
                    })
                }

            })
            return false;
        }
        
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>