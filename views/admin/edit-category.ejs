<%- include("../../views/partials/admin/header") %>

<style>
    /* Make container full-screen */
    .container {
        min-height: 100vh;
        width: 100vw;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .edit-category-container {
        width: 90%;
        max-width: 1200px; /* Increased from 700px */
        min-height: 80vh;
        margin: 0;
        padding: 60px; /* Increased padding */
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 16px;
        box-shadow: 0 6px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .edit-category-container:hover {
        box-shadow: 0 8px 40px rgba(0, 0, 0, 0.12);
    }

    .page-title {
        color: #1a2b49;
        font-size: 36px; /* Increased from 28px */
        font-weight: 700;
        margin-bottom: 50px;
        text-align: center;
        position: relative;
    }

    .page-title:after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px; /* Increased from 50px */
        height: 4px;
        background: #3498db;
        border-radius: 2px;
    }

    .form-group {
        margin-bottom: 40px; /* Increased from 30px */
    }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 12px; /* Increased from 10px */
        display: block;
        font-size: 18px; /* Increased from 15px */
    }

    .form-control {
        width: 100%;
        padding: 18px 20px; /* Increased padding */
        border: 2px solid #ecf0f1;
        border-radius: 8px; /* Increased from 6px */
        font-size: 16px; /* Increased from 15px */
        background-color: #f8fafc;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #3498db;
        background-color: #ffffff;
        box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.15);
    }

    textarea.form-control {
        min-height: 200px; /* Increased from 140px */
        resize: vertical;
    }

    .btn-update {
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
        padding: 18px 36px; /* Increased padding */
        border: none;
        border-radius: 8px; /* Increased from 6px */
        font-weight: 600;
        cursor: pointer;
        width: 100%;
        font-size: 18px; /* Increased from 16px */
        transition: all 0.3s ease;
    }

    .btn-update:hover {
        background: linear-gradient(135deg, #2980b9, #216a94);
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(52, 152, 219, 0.3);
    }

    .btn-update:active {
        transform: translateY(0);
    }
</style>

<div class="container">
    <div class="edit-category-container">
        <h1 class="page-title">Edit Category</h1>

        <form id="editCategoryForm" method="post" action="/admin/editCategory/<%= category._id %>">
            <div class="form-group">
                <label for="categoryName" class="form-label">Category Name</label>
                <input
                    type="text"
                    id="categoryName"
                    name="categoryName"
                    value="<%= category.name %>"
                    class="form-control"
                    required
                    placeholder="Enter category name"
                />
            </div>

            <div class="form-group">
                <label for="description" class="form-label">Description</label>
                <textarea
                    id="description"
                    name="description"
                    class="form-control"
                    required
                    placeholder="Describe the category"
                ><%= category.description %></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn-update">
                    Update Category
                </button>
            </div>
        </form>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

<script>
    document.getElementById("editCategoryForm").addEventListener("submit", async function(event) {
        event.preventDefault();

        const categoryName = document.getElementById("categoryName").value.trim();
        const description = document.getElementById("description").value.trim();
        const categoryId = "<%= category._id %>";

        try {
            const response = await fetch(`/admin/editCategory/${categoryId}`, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ categoryName, description }),
            });

            const data = await response.json();

            if (!response.ok) {
                throw new Error(data.error || 'Failed to update category');
            }

            await Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: data.message || 'Category updated successfully',
                timer: 2000,
                showConfirmButton: false
            });

            window.location.href = "/admin/category";
        } catch (error) {
            await Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message || 'An error occurred while updating the category',
            });
        }
    });
</script>

<%- include("../../views/partials/admin/footer") %>